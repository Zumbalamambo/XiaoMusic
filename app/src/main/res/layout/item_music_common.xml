<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/waterEffect"
    android:gravity="center_vertical"
    android:paddingStart="16dp"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    tools:ignore="RtlSymmetry">


    <TextView
        android:text="1"
        android:paddingEnd="10dp"
        android:textSize="16sp"
        android:textColor="@color/colorGray"
        android:id="@+id/tv_SerialNumber"
        android:gravity="center"
        android:layout_width="40dp"
        android:layout_height="match_parent" />

    <RelativeLayout

        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:ellipsize="end"
                    android:text="歌名"
                    android:lines="1"
                    android:textSize="12sp"
                    android:textColor="@color/colorMusicNameGray"
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <!--是否下载过-->

                    <ImageView
                        android:layout_marginEnd="5dp"
                        android:src="@drawable/ic_downloaded"
                        android:id="@+id/iv_is_downloaded"
                        android:layout_width="13dp"
                        android:layout_height="13dp" />
                    <TextView
                        android:text="歌手"
                        android:lines="1"
                        android:ellipsize="end"
                        android:textSize="10sp"
                        android:textColor="@color/colorMusicArtistGray"
                        android:id="@+id/tv_artist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:ignore="SmallSp" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:padding="8dp"
                style="@style/waterEffect"
                android:id="@+id/iv_mv"
                android:scaleType="fitCenter"
                android:tint="@color/colorIconGray"
                android:src="@drawable/ic_mv_red"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <ImageView
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingEnd="16dp"
                android:tint="@color/colorIconGray"
                android:id="@+id/iv_more"
                style="@style/waterEffect"
                android:src="@drawable/ic_more"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>

        <View
            android:layout_alignParentBottom="true"
            android:background="@color/colorGray"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
    </RelativeLayout>


</LinearLayout>